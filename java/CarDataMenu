//I HAVE NO IDEA WHAT IMPORTS ARE NECESSARY, SORRY

public class CarDataMenu extends Application {
    
    public static void main(String[] args) {
        launch(CarDataMenu.class, args); // I screwed up the code when I renamed the class, so I cant get it to launch. But the code
                                         //should still work fine if you copy and paste it for your GUI needs
    }
    
    @Override
    public void start(Stage stage) {


        BorderPane border = new BorderPane();
        
        HBox hbox = addHBox();
        border.setTop(hbox);

        Scene scene = new Scene(border);
        stage.setScene(scene);
        stage.setTitle("Layout Sample");
        stage.show();
    }

/*
 * Creates an HBox with two buttons for the top region
 */
    
    private HBox addHBox() {

        HBox hbox = new HBox();
        hbox.setPadding(new Insets(15, 12, 15, 12));
        hbox.setSpacing(10);   // Gap between nodes
        hbox.setStyle("-fx-background-color: #336699;");

        Button buttonCar = new Button("CarData");
        buttonCar.setPrefSize(100, 20);
        
        hbox.getChildren().addAll(buttonCar);
        buttonCar.setOnAction(new EventHandler<ActionEvent>() {
          @Override public void handle(ActionEvent e) {
            Stage stage = new Stage();
            BorderPane carData = new BorderPane();
            
            VBox vbox = addVBox();
            carData.setTop(vbox);
            
            Scene newScene = new Scene(carData);
            stage.setScene(newScene);
            stage.setTitle("Layout Sample");
            stage.show();
          }
        });
        return hbox;
    } 
    private VBox addVBox() {
      
      VBox vbox = new VBox();
      vbox.setPadding(new Insets(10)); 
      vbox.setSpacing(8);              
      
      /*
       * Ideally you need to get the data values from the car and put them into the title labels,
       * seperating them with '\n' for the new line. OR you can use multiple labels (one per attribute)
       */
      Text title = new Text("Data");
      title.setFont(Font.font("Arial", FontWeight.BOLD, 14));
      vbox.getChildren().addAll(title);
    
    return vbox;
}

}
